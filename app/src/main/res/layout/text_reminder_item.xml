<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:barrierMargin="3dp"
    app:cardBackgroundColor="@color/color_coco_4"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:contentPadding="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="50dp">


        <TextView
            android:id="@+id/tvReminderClientName"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="ClientName"
            tools:ignore="HardcodedText"
            android:justificationMode="inter_word"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvReminderPhoneLabel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <CheckBox
                android:id="@+id/cbReminderPhoneNumber1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:text="Numer1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvReminderPhoneLabel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <CheckBox
                android:id="@+id/cbReminderPhoneNumber2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:text="Numer2"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <EditText
            android:id="@+id/etTextMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="textMultiLine" />

    </LinearLayout>
</androidx.cardview.widget.CardView>