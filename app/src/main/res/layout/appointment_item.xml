<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:barrierMargin="2dp"
    app:cardBackgroundColor="@color/color_coco_4"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp"
    app:contentPadding="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvAppointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="DD-MM-YYYY"
            android:paddingEnd="5dp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/tvAppointmentTime"
            android:layout_width="50dp"
            android:gravity="center|start"
            android:layout_height="match_parent"
            android:text="00:00"
            tools:ignore="HardcodedText"/>

        <CheckBox
            android:id="@+id/cbAppointmentAbsent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:text="@string/absence"
            />

        <TextView
            android:id="@+id/tvAppointmentPayment"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="100"
            android:gravity="center|start"
            android:paddingHorizontal="5dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvAppointmentNote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="Note"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</androidx.cardview.widget.CardView>