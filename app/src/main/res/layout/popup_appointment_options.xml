<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/csPopupAppointmentOptions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnAddAppointment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        app:icon="@android:drawable/ic_input_add"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnMoveAppointmentUp"
        android:backgroundTint="@color/color_coco_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        app:icon="@drawable/ic_arrow_up"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="22dp"
        app:layout_constraintStart_toEndOf="@id/btnAddAppointment"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
    <Button
        android:id="@+id/btnMoveAppointmentDown"
        android:backgroundTint="@color/color_coco_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        app:icon="@drawable/ic_arrow_down"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="22dp"
        app:layout_constraintStart_toEndOf="@id/btnMoveAppointmentUp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnNavigateToClient"
        android:backgroundTint="@color/color_coco_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        app:icon="@drawable/ic_dog_database"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="20dp"
        app:layout_constraintStart_toEndOf="@id/btnMoveAppointmentDown"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnDeleteAppointment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/design_default_color_error"
        android:scaleType="fitXY"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNavigateToClient"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>